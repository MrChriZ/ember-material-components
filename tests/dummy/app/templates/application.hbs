{{#mdc-toolbar isFixed=true contentSelector="#main-page" as |toolbar|}}
  <div class="mdc-toolbar__row">
    <section class="mdc-toolbar__section mdc-toolbar__section--align-start">
      <a>{{toolbar.menu}}</a>
      <span class="mdc-toolbar__title">Title</span>
    </section>
  </div>
{{/mdc-toolbar}}

<div class="content">
  {{#mdc-permanent-drawer as |drawer|}}
    {{#drawer.list as |list|}}
      {{#list.item isActivated=true hasRipples=true}}
        {{mdc-icon "inbox" class="mdc-list-item__graphic mdc-list-item__start-detail" aria-hidden="true"}}Inbox
      {{/list.item}}
      {{#list.item hasRipples=true}}
        {{mdc-icon "star" class="mdc-list-item__graphic mdc-list-item__start-detail" aria-hidden="true"}}Star
      {{/list.item}}
    {{/drawer.list}}
  {{/mdc-permanent-drawer}}
  <main id="main-page" class="mdc-toolbar-fixed-adjust">
    <p>{{outlet}}</p>
  </main>
</div>