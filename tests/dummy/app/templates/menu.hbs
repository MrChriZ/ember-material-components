<div class="demo">
  <h1 class="mdc-typography--title">Default Menu</h1>
  <section>
    <div class="item">
      {{#mdc-button click=(action (mut isShowingMenu) true)}}Open Menu{{/mdc-button}}
      {{#mdc-menu
        isOpened=isShowingMenu
        cancel=(action (mut isShowingMenu) false)
        select=(action (mut isShowingMenu) false) as |menu|}}
          {{#menu.list}}
            {{#menu.item}}A Menu Item{{/menu.item}}
            {{#menu.item}}Another Menu Item{{/menu.item}}
          {{/menu.list}}
      {{/mdc-menu}}
    </div>
    <div class="item">{{code-snippet name="mdc-menu__default.hbs"}}</div>
  </section>
</div>

