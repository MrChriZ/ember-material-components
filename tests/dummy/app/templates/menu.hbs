<div class="demo">
  <h1 class="mdc-typography--title">Menu Anchor</h1>
  <section>
    <div class="item">
      {{#mdc-button click=(action (mut isShowingAnchoredMenu) true)}}Open Menu{{/mdc-button}}

      {{#mdc-toolbar class="mdc-menu-anchor" as |toolbar|}}
        <div class="mdc-toolbar__row">
          <section class="mdc-toolbar__section mdc-toolbar__section--align-start">
            <span class="mdc-toolbar__title">This is the menu anchor</span>
            {{#mdc-menu
              isOpened=isShowingAnchoredMenu
              isOpenedFromTopRight=true
              cancel=(action (mut isShowingAnchoredMenu) false)
              select=(action (mut isShowingAnchoredMenu) false) as |menu|}}
                {{#menu.list}}
                  {{#menu.item}}A Menu Item{{/menu.item}}
                  {{#menu.item}}Another Menu Item{{/menu.item}}
                {{/menu.list}}
            {{/mdc-menu}}
          </section>
        </div>
      {{/mdc-toolbar}}
    </div>
    <div class="item">{{code-snippet name="mdc-menu__anchor.hbs"}}</div>
  </section>
</div>

