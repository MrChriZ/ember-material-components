    <section class="mdc-toolbar__section mdc-toolbar__section--align-start">
      <span class="mdc-toolbar__title">This is the menu anchor</span>
      {{#mdc-menu
        isOpened=isShowingAnchoredMenu
        isOpenedFromTopRight=true
        cancel=(action (mut isShowingAnchoredMenu) false)
        select=(action (mut isShowingAnchoredMenu) false) as |menu|}}
          {{#menu.list}}
            {{#menu.item}}A Menu Item{{/menu.item}}
            {{#menu.item}}Another Menu Item{{/menu.item}}
          {{/menu.list}}
      {{/mdc-menu}}
    </section>
  </div>
{{/mdc-toolbar}}
{{!-- END-SNIPPET --}}

